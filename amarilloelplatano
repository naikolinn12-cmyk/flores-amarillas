  <!-- Tarjeta -->
  <div class="card" id="card">
    <img src="romantico.gif" alt="Gif rom치ntico">
    <p>游눘 nunca la dejaria sin sus flores amarillas cari침o, 
        aun que no pude hacer que la sam te las entrege por 
        mi alguna solucion iba a encontrar 游눘</p>
    <button class="close">Cerrar</button>
  </div>

  <script>
    const btn = document.querySelector('.btn');
    const h1 = document.querySelector('h1');
    const flowers = document.querySelector('.flowers');
    const card = document.getElementById('card');
    const closeBtn = document.querySelector('.close');

    btn.addEventListener('click', () => {
      // Crear explosi칩n
      const explosion = document.createElement('div');
      explosion.classList.add('explosion');
      btn.parentElement.appendChild(explosion);

      setTimeout(() => {
        explosion.remove();
        btn.style.display = 'none';
        document.querySelector('.emoji').style.display = 'none';
        h1.style.display = 'block';
        flowers.style.display = 'flex';
      }, 700);
    });

    // Mostrar tarjeta al hacer clic en una flor
    document.querySelectorAll('.flower').forEach(flower => {
      flower.addEventListener('click', () => {
        card.style.display = 'block';
      });
    });

    // Cerrar tarjeta
    closeBtn.addEventListener('click', () => {
      card.style.display = 'none';
    });
  </script>
